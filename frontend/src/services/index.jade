        .l-grid.l-grid--container
            .l-row
                .l-col.l-col--xs-12.h-text--xs-center
                    h1.ui-heading.ui-heading--glitter.ui-heading--lvl1 НАШИ НОВЫЕ РАБОТЫ
            .l-row
                .l-col.l-col--xs-4.h-text--xs-center
                    .ui-work-cart
                        .ui-work-cart__img
                            img(src="/images/our-work/work1.png")
                        .ui-work-cart__title Subway Surfers
                        .ui-work-cart__description IOS app
                .l-col.l-col--xs-4.h-text--xs-center
                    .ui-work-cart
                        .ui-work-cart__img
                            img(src="/images/our-work/work1.png")
                        .ui-work-cart__title Subway Surfers
                        .ui-work-cart__description IOS app
                .l-col.l-col--xs-4.h-text--xs-center
