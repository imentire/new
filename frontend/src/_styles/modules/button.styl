.ui-button
    font-family 'Open Sans'
    font-size 14px
    line-height 24px
    border-radius 23px
    cursor pointer
    text-align center
    bottom 0
    display inline-block
    transition all .2s ease
    text-decoration none
    outline 0

    &--default
        padding 10px 25px 11px
        min-width 240px

    &--md
        padding 10px 30px 11px
        width 197px

    &--lg
        width 299px
        display block

    &--white
        padding 8px 25px 9px
        border 2px solid #eff2fb
        color #6a6971
        margin 10px 10px 0 0

        @media(max-width: 544px)
            margin-right 0
            width 100%

    &--transparent
        display flex
        align-items center
        justify-content center
        padding 8px 25px 9px
        border 2px solid #676ea0
        text-decoration none

        &:focus
            outline 0
            color #fff
            text-decoration none

        span
            color #fff
            padding-left 10px

    &--transparentgrey
        padding 8px 25px 9px
        border 2px solid #eff2fb
        display flex
        align-items center
        justify-content center
        text-decoration none

        &:focus
            outline 0
            color #fff
            text-decoration none

        span
            color #6a6971
            padding-left 10px

    &--green
        background-image linear-gradient(to bottom, #5fa315 0%, #80d325 100%)
        color #fff

        &:hover
        &:focus
            background-image linear-gradient(to bottom, #4e9204 0%, #70c214 100%)

    &--blue
        background-image linear-gradient(to bottom, #2956ba 0%, #2572d3 100%)
        color #fff
        transition all .2s ease

        &:hover
        &:focus
            background-image linear-gradient(to bottom, #1245a9 0%, #1461c2 100%)

    &--block
        display flex
        align-items center

    &--column
        margin-top 27px

    &--price
        text-decoration none

        &:before
            content attr(data-label-normal)
