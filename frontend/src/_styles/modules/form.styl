.ui-form-request
    background-color #ffffff
    border-radius 10px
    box-shadow 0px 9px 37px 0px #000
    padding 26px 12px
    margin-bottom 30px

.ui-form-relations
    background-color #ffffff
    border-radius 10px
    box-shadow 0px 9px 37px 0px #000
    padding 26px 12px
    margin-bottom 30px

.ui-alert
    padding 10px 15px
    border 1px solid transparent
    border-radius 5px
    width 100%
    text-align left
    display none
    font-family 'Open Sans'
    font-size 14px

    &--success
        background-color #dff0d8
        border-color #d0e9c6
        color #3c763d

    &--error
        background-color #f2dede
        border-color #ebcccc
        color #a94442
        margin-bottom 26px
