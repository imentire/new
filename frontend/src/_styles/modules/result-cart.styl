.ui-result-cart
    margin 20px 0
    display flex
    flex-direction column
    align-items center

    @media(min-width: 768px)
        margin 120px 0 60px

    &__img
        height 144px
        width 144px
        border-radius 50%
        box-shadow inset 0px 1px 0px 0px rgba(255, 255, 255, 0.14), 0px 3px 5px 0px rgba(0, 0, 0, 0.19)
        background-image linear-gradient(#2956ba 0%, #2572d3 100%)
        display flex
        align-items center
        justify-content center

    &__title
        font-family 'Open Sans'
        font-size 17px
        color #5d5d64
        line-height 60px
        text-transform uppercase
        font-weight bold

    &__description
        font-family 'Open Sans'
        font-size 13px
        color #8f8e94
        line-height 22px
