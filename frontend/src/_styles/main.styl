// Normalize Styles
@import '../../node_modules/normalize.css/normalize.css';

// Import Modules
@import './grid/flexbox-grid';
@import 'modules/button';
@import 'modules/input';
@import 'modules/heading';
@import 'modules/form';

// Box sizing partial styles
// Apply a natural box layout model to all elements
*,
*:before,
*:after
    box-sizing border-box
    outline 1px dashed green

.ui-header
    padding 33px 0
    z-index 10
    position absolute
    width 100%

    &__content
        display flex
        align-items center

.ui-menu
    display flex
    justify-content space-between

    &__link
        font-family 'Open Sans'
        font-size 14px
        color #8893bf
        text-align left
        line-height 24px
        text-decoration none

.ui-footer
    background url('../images/footer-bg.png') no-repeat 50% 100%
    background-size cover
    padding 200px 0 30px 0

    &__copyright
        border-top 1px solid #373365
        padding-top 30px
        margin-top 140px
        color #4c457b

.ui-description
    padding 30px 0 90px
    color #cfcde1
    font-family 'OpenSans'
    font-size 14px
    line-height 24px

.ui-first-screen
    background #edf2fe url('../images/first-screen-bg.png') no-repeat 50% 50%
    background-size cover
    padding-top 290px
    padding-bottom 354px
    position relative

    &__img
        transform translate(0, 50%)
        position absolute
        bottom 0

.ui-activities
    background #edf2fe
    padding 270px 0 50px
